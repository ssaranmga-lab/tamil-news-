# Tamil News Channel Environment Variables
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# Option 1: Local MongoDB (if installed)
MONGODB_URI=mongodb://localhost:27017/tamil-news

# Option 2: MongoDB Atlas (Cloud) - Replace with your connection string
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/tamil-news?retryWrites=true&w=majority

# JWT Secret (Change this to a secure random string)
JWT_SECRET=your-super-secret-jwt-key-here

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=public/uploads

# Admin Configuration
DEFAULT_ADMIN_EMAIL=admin@tamilnews.com
DEFAULT_ADMIN_PASSWORD=admin123
